<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#885555"
                android:endColor="#880000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#555555" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

	<item android:state_enabled="false" >
        <shape>
            <gradient
                android:startColor="#555555"
                android:endColor="#000000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#555555" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#000000"
                android:startColor="#292929"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#555555" />
            <corners
                android:radius="8dp" />
        </shape>
    </item>
</selector>