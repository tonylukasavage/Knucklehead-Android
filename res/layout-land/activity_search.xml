<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:sl="http://schemas.android.com/apk/lib/com.savagelook.android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/carbon_fibre_repeat"
	android:id="@+id/main_view"
	android:orientation="vertical"
	>
	<ScrollView
		android:layout_width="fill_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    >
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
			android:paddingLeft="80dip"
			android:paddingRight="80dip"
		    >
		    <TextView
			    android:text="Fighter Search"
			    android:textColor="#eeeeee"
			    android:shadowColor="#888888"
			    android:shadowDx="1.0"
			    android:shadowDy="1.0"
			    android:shadowRadius="1.0"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:textSize="26dip"
			    android:textStyle="bold"
			    android:paddingBottom="6dip"
		    />
		    <EditText 
			    android:id="@+id/firstname"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:hint="First Name"
			    android:inputType="text"
			    android:imeOptions="actionNext"
			/>
			<EditText 
			    android:id="@+id/lastname"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:hint="Last Name"
			    android:inputType="text"
			    android:imeOptions="actionNext"
			/>
			<EditText 
			    android:id="@+id/nickname"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:hint="Nickname"
			    android:inputType="text"
			    android:imeOptions="actionNext"
			/>
			<com.savagelook.android.JsonSpinner
				android:id="@+id/weightclasses"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:prompt="@string/weight_prompt"
				sl:json_resource="@raw/weightclasses"
				sl:json_key="k"
				sl:json_value="v"
			/>
			<Button
				android:id="@+id/search"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="20dip"
				android:paddingRight="20dip"
				android:layout_marginTop="10dip"
				android:text="Search"
				android:textSize="28dip"
				android:textColor="#eeeeee"
				android:shadowColor="#F000"
				android:shadowDx="2.0"
				android:shadowDy="2.0"
				android:shadowRadius="2.0"
				android:background="@drawable/search_button"
			/>
		</LinearLayout>
	</ScrollView>
	<com.google.ads.AdView
		xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads" 
		android:id="@+id/adView"
		android:layout_width="wrap_content" 
		ads:adSize="BANNER"
		ads:adUnitId="@string/admobId"
		ads:loadAdOnCreate="false"
		android:visibility="visible"
		android:layout_gravity="bottom"
		android:layout_height="wrap_content"
		/>
</LinearLayout>
