<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"  
    android:orientation="vertical"
    >
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"  
	    android:orientation="horizontal"
	    android:background="@drawable/fight_list_header"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:paddingTop="2dip"
	    android:paddingBottom="1dip"
	    >
	    <TextView
		    android:id="@+id/fight_event_name"
		    android:layout_height="wrap_content"
		    android:layout_width="0dip"
		    android:layout_weight="1"
		    android:textColor="#000000"
		    android:textSize="12dip"
		    android:textStyle="normal"
		    android:inputType="text"
		    android:ellipsize="marquee"
		    />
		<TextView
		    android:id="@+id/fight_date"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_gravity="right"
		    android:textColor="#000000"
		    android:textSize="12dip"
		    android:textStyle="bold"
		    android:paddingLeft="6dip"
		    />
    </LinearLayout>
    <View
	    android:layout_height="1dip"
	    android:layout_width="fill_parent"
	    android:background="@drawable/fight_list_divider"
	    />
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"  
	    android:orientation="horizontal"
	    android:layout_gravity="center_vertical"
	    android:background="@drawable/fight_list_content"
	    android:paddingTop="4dip"
	    android:paddingBottom="4dip"
	    >
	    <TextView
		    android:id="@+id/fight_result"
		    android:layout_height="fill_parent"
		    android:layout_width="50dip"
		    android:textColor="#ffffff"
		    android:gravity="center"
		    android:textStyle="normal"
		    />
		<LinearLayout
			android:orientation="vertical"
			android:layout_weight="1"
			android:layout_width="0dip"
			android:layout_height="fill_parent"
			android:paddingLeft="3dip"
			android:paddingRight="3dip"
			>
			<TextView
				android:id="@+id/fight_opponent"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textStyle="bold"
				android:textSize="14dip"
				/>
			<TextView
				android:id="@+id/fight_method"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:textStyle="italic"
				android:textSize="10dip"
				/>
		</LinearLayout>
		<LinearLayout
			android:orientation="vertical"
			android:layout_height="wrap_content"
			android:layout_width="60dip"
			>
			<TextView
				android:id="@+id/fight_round"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:gravity="center"
				/>
			<TextView
				android:id="@+id/fight_time"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:gravity="center"
				/>
		</LinearLayout>
    </LinearLayout>
</LinearLayout>
