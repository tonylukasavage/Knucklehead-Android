<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.savagelook"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

	<uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/icon" android:label="@string/app_name"
	    android:name=".Knucklehead">
        <activity android:name=".SearchActivity" android:screenOrientation="portrait"
	        android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity android:name=".FighterListActivity" android:theme="@style/customTheme" 
			android:label="Select a fighter for details" android:screenOrientation="portrait"/>
		<activity android:name=".FighterTabActivity" android:theme="@android:style/Theme.NoTitleBar"
			android:screenOrientation="portrait"/>
		<activity android:name=".FighterProfileActivity" 
			android:screenOrientation="portrait"/>
		<activity android:name=".FighterRecordActivity" 
			android:screenOrientation="portrait"/>
		<activity android:name=".FighterGalleryActivity" 
			android:screenOrientation="portrait"/>
    </application>
</manifest>